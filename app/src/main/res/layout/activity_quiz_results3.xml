<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/background4"
        android:orientation="vertical"
        tools:context=".QuizResults3">

    <TextView
            android:id="@+id/textres3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:layout_marginTop="50dp"
            android:layout_marginEnd="10dp"
            android:gravity="center"
            android:text="Ваш результат"
            android:textColor="#CC000000"
            android:textSize="25sp"
            android:textStyle="normal" />

    <ImageView
            android:id="@+id/caticon3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/textres3"
            android:layout_marginStart="10dp"
            android:layout_marginTop="200dp"
            android:layout_marginEnd="10dp"
            android:adjustViewBounds="true"
            android:src="@drawable/caaticon" />

    <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/textres3"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="10dp"
            android:orientation="vertical">

        <TextView
                android:id="@+id/corans3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="50dp"
                android:text="Количество правильных ответов: 0"
                android:textColor="#CC000000"
                android:textSize="20sp"
                android:textStyle="normal" />

        <TextView
                android:id="@+id/incorans3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:text="Количество не правильных ответов: 0"
                android:textColor="#CC000000"
                android:textSize="20sp"
                android:textStyle="normal" />

    </LinearLayout>

    <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/StartBtn3"
            android:layout_width="match_parent"
            android:layout_height="50dp"

            android:layout_alignParentBottom="true"
            android:layout_marginStart="30dp"
            android:layout_marginEnd="30dp"
            android:layout_marginBottom="65dp"
            android:background="@drawable/round_back_light"
            android:text="Начать новую викторину" />


</RelativeLayout>