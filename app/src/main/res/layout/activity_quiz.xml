<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".QuizAct"
    android:orientation="vertical"
    android:background="@drawable/background4">

    <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="60dp">

        <ImageView
                android:id="@+id/backBtn"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_centerVertical="true"
                android:layout_marginStart="15dp"
                android:src="@drawable/strelka" />

        <TextView
                android:id="@+id/nameTopic"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:text="Hello world"
                android:textColor="#CC000000"
                android:textSize="20sp"
                android:textStyle="normal" />

        <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_centerVertical="true"
                android:layout_marginEnd="15dp"
                android:gravity="center"
                android:orientation="horizontal">

            <ImageView
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_marginEnd="15dp"
                    android:src="@drawable/clock" />

            <TextView
                    android:id="@+id/timer"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="02:59"
                    android:layout_marginEnd="5dp"
                    android:textColor="#CC000000"
                    android:textStyle="normal"
                    android:textSize="20sp"/>

        </LinearLayout>

    </RelativeLayout>

    <TextView
            android:id="@+id/question"
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:layout_gravity="center"
            android:layout_marginTop="10dp"
            android:background="@drawable/round_back_white_10"
            android:elevation="1dp"
            android:gravity="center"
            android:paddingStart="15dp"
            android:paddingEnd="15dp"
            android:text="1/3"
            android:textColor="#CC000000"
            android:textSize="18sp"
            android:textStyle="normal"
            />

    <TextView
            android:id="@+id/quis"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            android:layout_marginEnd="20dp"
            android:layout_marginTop="-15dp"
            android:background="@drawable/round_back_light"
            android:gravity="center"
            android:minHeight="100dp"
            android:padding="20dp"
            android:text="Heloo gear"
            android:textColor="#CC000000"
            android:textSize="16sp"
            android:textStyle="normal" />

    <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/oneotvet"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginStart="20dp"
            android:layout_marginEnd="20dp"
            android:layout_marginTop="30dp"
            android:background="@drawable/backround_otvet"
            android:text="Optionone"
            android:textStyle="normal"
            android:textSize="15sp"
            android:textColor="#CC000000" />

    <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/twootvet"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginStart="20dp"
            android:layout_marginEnd="20dp"
            android:layout_marginTop="20dp"
            android:background="@drawable/backround_otvet"
            android:text="Two otvet"
            android:textStyle="normal"
            android:textSize="15sp"
            android:textColor="#CC000000" />

    <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/threeotvet"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginStart="20dp"
            android:layout_marginEnd="20dp"
            android:layout_marginTop="20dp"
            android:background="@drawable/backround_otvet"
            android:text="Three otvet"
            android:textStyle="normal"
            android:textSize="15sp"
            android:textColor="#CC000000" />

    <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/foureotvet"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginStart="20dp"
            android:layout_marginEnd="20dp"
            android:layout_marginTop="20dp"
            android:background="@drawable/backround_otvet"
            android:text="Four otvet"
            android:textStyle="normal"
            android:textSize="15sp"
            android:textColor="#CC000000" />

    <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/nextbtn"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginStart="20dp"
            android:layout_marginEnd="20dp"
            android:layout_marginTop="60dp"
            android:background="@drawable/round_back_light"
            android:text="Next"
            android:textStyle="normal"
            android:textSize="15sp"
            android:textColor="#CC000000" />
</LinearLayout>