<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/background4"
        android:orientation="vertical"
        tools:context=".QuizResults">

    <TextView
            android:id="@+id/textres"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:layout_marginTop="30dp"
            android:layout_marginEnd="10dp"
            android:gravity="center"
            android:text="Ваше время вышло, попробуте снова!"
            android:textColor="#CC000000"
            android:textSize="25sp"
            android:textStyle="normal" />
    <TextView
            android:id="@+id/textres1"
            android:layout_below="@+id/textres"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:layout_marginEnd="10dp"
            android:layout_marginTop="40dp"
            android:gravity="center"
            android:text="Ваши результаты:"
            android:textColor="#CC000000"
            android:textSize="20sp"
            android:textStyle="normal" />

    <ImageView
            android:id="@+id/caticon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/textres"
            android:layout_marginStart="55dp"
            android:layout_marginTop="230dp"
            android:layout_marginEnd="10dp"
            android:adjustViewBounds="true"
            android:src="@drawable/timestop" />

    <LinearLayout
            android:layout_below="@+id/textres"
            android:layout_marginTop="30dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:orientation="vertical">

        <TextView
                android:id="@+id/corans"
                android:text="Количество правильных ответов: 0"
                android:layout_marginTop="50dp"
                android:textStyle="normal"
                android:textSize="20sp"
                android:textColor="#CC000000"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                />

        <TextView
                android:layout_marginTop="20dp"
                android:id="@+id/incorans"
                android:text="Количество не правильных ответов: 0"
                android:textStyle="normal"
                android:textSize="20sp"
                android:textColor="#CC000000"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                />

    </LinearLayout>

    <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/StartBtn"
            android:layout_width="match_parent"
            android:layout_height="50dp"

            android:layout_alignParentBottom="true"
            android:layout_marginBottom="65dp"
            android:layout_marginEnd="30dp"
            android:layout_marginStart="30dp"
            android:background="@drawable/round_back_light"
            android:text="Начать новую викторину" />

</RelativeLayout>